<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">


    <EditText
        android:id="@+id/element_pic"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_field"
        android:gravity="center"
        android:hint="@string/elementPic"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/element_title"
        app:layout_constraintCircleRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/element_title"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:background="@drawable/edit_text_field"
        android:gravity="center"
        android:hint="@string/elementTitle"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/element_desc"
        app:layout_constraintCircleRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/element_pic" />

    <EditText
        android:id="@+id/element_desc"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:background="@drawable/edit_text_field"
        android:gravity="center"
        android:hint="@string/elementDesc"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/element_title"/>

