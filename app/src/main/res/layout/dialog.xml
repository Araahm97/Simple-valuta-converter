<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/element_title"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="11dp"
        android:background="@color/background"
        android:inputType="text"
        android:hint="@string/elementTitle"
        app:layout_constraintBottom_toTopOf="@+id/element_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/element_desc"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:inputType="text"
        android:layout_marginBottom="100dp"
        android:hint="@string/elementDesc"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/element_title" />

</android.support.constraint.ConstraintLayout>